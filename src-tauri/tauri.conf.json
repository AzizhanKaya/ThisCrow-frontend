{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "thiscrow",
	"version": "0.1.0",
	"identifier": "com.thiscrow.app",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build-only"
	},
	"app": {
		"windows": [
			{
				"title": "ThisCrow",
				"width": 1200,
				"height": 800,
				"resizable": true,
				"decorations": false,
				"transparent": true,
				"shadow": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
	}
}
